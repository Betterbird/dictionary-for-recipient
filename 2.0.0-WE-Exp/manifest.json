{
  "manifest_version": 2,
  "name": "Dictionary for recipient",
  "description": "Sets the spell check dictionary based on the recipient",
  "version": "2.2.0",
  "author": "Jorg K",
  "applications": {
    "gecko": {
      "id": "JorgK@dictionaryforrecipient",
      "strict_min_version": "78.0a1",
      "strict_max_version": "102.*"
    }
  },
  "experiment_apis": {
    "DictionaryForRecipient": {
      "schema": "schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          ["DictionaryForRecipient"]
        ],
        "script": "experiments.js"
      }
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}